{
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "browser-sync": "^2.18.5",
    "cssnano": "^3.9.1",
    "eslint": "^3.12.2",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.1.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "postcss-csscomb": "^1.0.2",
    "source-map-concat-cli": "^1.0.0",
    "uglify-js": "^2.7.5",
    "watch": "^1.0.1"
  },
  "scripts": {
    "sass": "node-sass assets/_sass --output assets/css; exit 0",
    "postcss": "postcss --config config.postcss.json --map inline --dir assets/css assets/css/*.css",
    "concat": "source-map-concat assets/_js/app.js --output assets/js/app.js",
    "eslint": "eslint --config '.eslintrc' assets/_js/**/*.js; exit 0",
    "uglify": "uglifyjs --compress --mangle --output dist/assets/js/app.js assets/js/app.js",
    "imagemin": "imagemin assets/images/* --out-dir dist/assets/images; exit 0",
    "browsersync": "browser-sync start --config bs-config.js",
    "watch": "npm run watch:parallel",
    "watch:parallel": "parallelshell 'npm run browsersync' 'npm run watch:sass' 'npm run watch:js'",
    "watch:sass": "watch --interval 0.1 'npm run sass && npm run postcss' assets/_sass",
    "watch:js": "watch --interval 0.1 'npm run eslint && npm run concat' assets/_js",
    "css": "npm run sass && npm run postcss",
    "js": "npm run eslint && npm run concat",
    "build": "parallelshell 'npm run css' 'npm run js'",
    "dist": "npm run dist:mkdirp && parallelshell 'npm run dist:css' 'npm run dist:js'",
    "dist:mkdirp": "mkdirp dist/assets/js",
    "dist:postcss": "postcss --config config.postcss.dist.json --no-map --dir dist/assets/css assets/css/*.css",
    "dist:css": "npm run dist:postcss",
    "dist:js": "npm run uglify",
    "dist:images": "npm run imagemin",
    "dist:all": "parallelshell 'npm run dist' 'npm run dist:images'"
  }
}
